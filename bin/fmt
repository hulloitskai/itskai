#!/usr/bin/env ruby
# frozen_string_literal: true

# == Helpers
def system!(*args)
  system(*args) || abort("Command `#{args.join(' ')}' failed")
end

def scoped(&block) = yield

# == Dependencies
system("bundle", "install", "--quiet") ||
  abort("Failed to install Ruby dependencies")
system("npm", "install") ||
  abort("Failed to install Node dependencies")

# == Options
require "optparse"

options = {}

OptionParser.new do |opts|
  opts.banner = "Usage: bin/fmt [--fix] <targets...>"
  opts.on("--fix", "Auto-format unformatted files") do |fix|
    options[:fix] = fix
  end
  opts.on("--ci", "Output in CI-friendly format") do |ci|
    options[:ci] = ci
  end
end.parse!

# == Formatting
puts "=> Running Prettier"
scoped do
  args = ["--cache"]
  args << (options[:fix] ? "--write" : "--check")
  args << "."
  system! "npx", "prettier", *args
end

puts "\n=> Runnning Rubocop"
scoped do
  args = []
  if options[:fix]
    args << "--fix-layout"
  else
    args << "--only"
    args << "Layout"
  end
  args << "-f" << "github" if options[:ci]
  system! "bin/rubocop", *args
end

puts "\n=> Running Black"
scoped do
  args = ["bin/black"]
  unless options[:fix]
    args << "--check"
  end
  args << "."
  system!(*args)
end

