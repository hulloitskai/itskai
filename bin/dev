#!/usr/bin/env bash

docker info > /dev/null 2>&1
STATUS="$?"

if [ "$STATUS" != "0" ]; then
  if [ "$STATUS" == "1" ]; then
    if [ "$(uname)" == "Darwin" ] && which open > /dev/null; then
      echo "Starting Docker..." >&2
      open -a Docker || exit 1
      sleep 2 # wait for Docker to boot
    else
      echo "Docker isn't running! Please start Docker and try again." >&2
      exit 1
    fi
  else
    exit 1
  fi
fi

OVERMIND_SOCKET=tmp/sockets/overmind.${RAILS_ENV:-development}.sock
if [ -e "$OVERMIND_SOCKET" ]; then
  if bin/overmind status > /dev/null; then
    bin/overmind echo
    exit 0
  fi
  rm "$OVERMIND_SOCKET"
fi

bin/overmind start -f Procfile.dev --no-port "$@"
